- var data = 0
- var defaults = 1
- var descriptions = 2
.row
  .span3.bs-docs-sidebar
    ul.nav.nav-list.bs-docs-sidenav
      each v, k in config[data]
        - if (k!= 'type') {
        li
          a(href='#' + k)
            i.icon-cheveron-right
            span= k
        - }
      .form-actions.well(style='margin: 0;')
        a.btn.btn-primary.save_conf(href="#")= i18n.gettext('Save')
        a.btn.delete_conf(href="#")= i18n.gettext('Cancel')
  .span9.well
    form.form-horizontal
      each v, k in config[data]
          - if (k!='type') {
          .page-header
            a(id=k, class='anchor-offset')
            h1= config[descriptions]['properties'][k]['title']
            h2= config[descriptions]['properties'][k]['description']
            each v0, k0 in v
             - if (typeof(v0) != 'string') {
               h3=config[descriptions]['properties'][k]['properties'][k0]['title']
               p= config[descriptions]['properties'][k]['properties'][k0]['description']
               each v1, k1 in v0
                 - var label=  k+'.'+k0+'.'+k1
                 - var value= v1
                 - var title = config[descriptions]['properties'][k]['properties'][k0]['properties'][k1]['title']
                 - var desc = config[descriptions]['properties'][k]['properties'][k0]['properties'][k1]['description']
                 - var default_value = config[defaults][k][k0][k1]
                 .control-group
                   label.control-label(for=label)= title + ' : '
                   .controls
                     input.span5(id=label, type='text', name=label, placeholder=label, value=value, title=desc)
                     - if (v1 != default_value) {
                       button.set_default.btn.btn-primary(name=label)= i18n.gettext('Default')
                     -}
             - }
          - }
