block content
  .row-fluid
    .span3
      #universe-container
        #universe
    .span5
      #left-pane
    .span4
      #right-pane.onePlaylist
      .form-actions.playlist-button-array(style='display:none;')
        .alert.alert-block.alert-unnamed-playlist(style='display:none')
          button.close(type='button', data-dismiss='alert') ×
          h4= i18n.gettext('Set a list name !')
          p=  i18n.gettext('You are currently editing an un-named playlist\n'+ 'set a name before you can save.')
        .alert.alert-block.alert-empty-playlist(style='display:none')
          button.close(type='button', data-dismiss='alert') ×
          h4= i18n.gettext('Add some media !')
          p=  i18n.gettext('You need to add some media before you can save a playlist, drag some rows from the left pane to start adding')
        .alert.alert-block.alert-has-occurrences(style='display:none')
          button.close(type='button', data-dismiss='alert') ×
          h4= i18n.gettext('Can\'t delete or change Playlist!')
          p=  i18n.gettext('You are currently editing a  scheduled playlist. Create a new one.')
        .btn.btn-block.btn-primary.save=  i18n.gettext('Save')
        .btn.btn-block.btn-danger.delete= i18n.gettext('Delete')
      .alert.alert-block.no-playlist-alert
          h4= i18n.gettext('Oops!')
          p=  i18n.gettext('It looks like you have no playlist to show here')
          button.btn.btn-block.btn-large.btn-primary#create-playlist= i18n.gettext('Create New Playlist')
